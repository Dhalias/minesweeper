<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.RadioButton?>
<VBox xmlns:fx="http://javafx.com/fxml" styleClass="principal">
    <VBox styleClass="vide-100"/>
    <HBox styleClass="orange">
        <HBox styleClass="vert">
            <VBox>
               <fx:define>
                    <ToggleGroup fx:id="mapSize" />
                </fx:define>

                <RadioButton fx:id="radioButton11" text="Petite" toggleGroup="$mapSize"/>
                <RadioButton fx:id="radioButton12" text="Moyenne" toggleGroup="$mapSize"/>
                <RadioButton fx:id="radioButton13" text="Grande" toggleGroup="$mapSize"/>
            </VBox>
        </HBox>
        <HBox styleClass="vide"/>
        <HBox styleClass="vert">
            <VBox>
                <fx:define>
                        <ToggleGroup fx:id="diff" />
                    </fx:define>

                    <RadioButton fx:id="radioButton21" text="Facile" toggleGroup="$diff"/>
                    <RadioButton fx:id="radioButton22" text="Moyen" toggleGroup="$diff"/>
                    <RadioButton fx:id="radioButton23" text="Difficile" toggleGroup="$diff"/>
            </VBox>
        </HBox>
    </HBox>
    <VBox styleClass="pink"></VBox>
</VBox>