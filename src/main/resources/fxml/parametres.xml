<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import minesweeper.vues.composants.GC_Radiobutton?>
<VBox xmlns:fx="http://javafx.com/fxml" styleClass="principal">
    <VBox  maxHeight="Infinity" VBox.vgrow="ALWAYS"/>
    <HBox styleClass="center"  maxHeight="Infinity" VBox.vgrow="ALWAYS">
        <HBox  maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        <HBox styleClass="paramBox" maxWidth="Infinity" HBox.hgrow="ALWAYS">
            <GC_Radiobutton rb1="%size1" rb2="%size2" rb3="%size3" title="%titleMapSize">
        </HBox>
        <HBox  maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        <HBox styleClass="paramBox" maxWidth="Infinity" HBox.hgrow="ALWAYS">
            <VBox maxWidth="Infinity" HBox.hgrow="ALWAYS">
                <fx:define>
                        <ToggleGroup fx:id="diff" />
                    </fx:define>

                    <VBox  maxHeight="Infinity" VBox.vgrow="ALWAYS">
                        <Text styleClass="titreToggleGroup" text="%titleDiff"></Text>
                    </VBox>
                    <VBox  maxHeight="Infinity" VBox.vgrow="ALWAYS"/>
                    <RadioButton fx:id="radioButton21" text="%diff1" toggleGroup="$diff" maxHeight="Infinity" VBox.vgrow="ALWAYS"/>
                    <VBox  maxHeight="Infinity" VBox.vgrow="ALWAYS"/>
                    <RadioButton fx:id="radioButton22" text="%diff2" toggleGroup="$diff" maxHeight="Infinity" VBox.vgrow="ALWAYS"/>
                    <VBox  maxHeight="Infinity" VBox.vgrow="ALWAYS"/>
                    <RadioButton fx:id="radioButton23" text="%diff3" toggleGroup="$diff" maxHeight="Infinity" VBox.vgrow="ALWAYS"/>
                    <VBox  maxHeight="Infinity" VBox.vgrow="ALWAYS"/>
            </VBox>
        </HBox>
        <HBox  maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
    </HBox>
    <VBox  maxHeight="Infinity" VBox.vgrow="ALWAYS" />
    <VBox styleClass="center" maxHeight="Infinity" VBox.vgrow="ALWAYS" >
        <HBox>
            <HBox   maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
            <Button styleClass="boutonStart" text="%boutonStart"  maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
            <HBox   maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        </HBox>
        
    </VBox>
</VBox>