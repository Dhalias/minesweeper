<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import minesweeper.vues.composants.GC_Radiobutton?>
<VBox xmlns:fx="http://javafx.com/fxml" styleClass="principal" fx:controller="minesweeper_javafx.vues.VueParametresFX">
    <VBox  maxHeight="Infinity" VBox.vgrow="ALWAYS"/>
    <HBox styleClass="center"  maxHeight="Infinity" VBox.vgrow="ALWAYS">
        <HBox  maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        <HBox styleClass="paramBox" maxWidth="Infinity" HBox.hgrow="ALWAYS">
            <GC_Radiobutton fx:id="gcRadiobutton" rb1="%size1" rb2="%size2" rb3="%size3" title="%titleMapSize"/>
        </HBox>
        <HBox  maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        <HBox styleClass="paramBox" maxWidth="Infinity" HBox.hgrow="ALWAYS">
            <GC_Radiobutton fx:id="gcRadiobutton" rb1="%diff1" rb2="%diff2" rb3="%diff3" title="%titleDiff"/>
        </HBox>
        <HBox  maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
    </HBox>
    <VBox  maxHeight="Infinity" VBox.vgrow="ALWAYS" />
    <VBox styleClass="center" maxHeight="Infinity" VBox.vgrow="ALWAYS" >
        <HBox>
            <HBox   maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
            <Button styleClass="boutonStart" text="%boutonStart"  maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
            <HBox   maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        </HBox>
        
    </VBox>
</VBox>